<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Mark Updater</title>

    <!-- Bootstrap Core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/stylish-portfolio.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/DataTables/datatables.css">

  </head>

  <body id="page-top">
    <!-- Navigation -->
    <a class="menu-toggle rounded" href="#">
      <i class="fa fa-bars"></i>
    </a>
    <nav id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <li class="sidebar-brand">
          <a class="js-scroll-trigger" href="#page-top">Mark Updater</a>
        </li>
        <li class="sidebar-nav-item">
          <a class="js-scroll-trigger" href="#page-top">Home</a>
        </li>
        <li class="sidebar-nav-item">
          <a class="js-scroll-trigger" href="/login">Login</a>
        </li>
        <li class="sidebar-nav-item">
          <a class="js-scroll-trigger" href="/signup">Signup</a>
        </li>
        <li class="sidebar-nav-item">
          <a class="js-scroll-trigger" href="#search">Search</a>
        </li>
        <li class="sidebar-nav-item">
          <a class="js-scroll-trigger" href="#contact">Contact</a>
        </li>
      </ul>
    </nav>

    <!-- Header -->
    <header class="masthead d-flex">
      <div class="container text-center my-auto">
        <div class="mb-1"><img src="./img/cet.png"></img></div>
        <h1 class="mb-1">Mark Updater</h2>
        <h3 class="mb-5">
          <em>College Of Engineering and Technology,Bhubaneswar</em>
        </h3>
        <a class="btn btn-primary btn-lg js-scroll-trigger" href="#search">Enter Marks</a>
      </div>
      <div class="overlay"></div>
    </header>

    <!-- About -->
    <section class="content-section bg-light" id="search">
      <div class="container text-center">
        <div class="row">
          <div class="col-lg-10 mx-auto">
            <form method="POST" action="/result">
                <fieldset class="inline-fields sem mb-5">
                    <h3>Select the Semester</h3>
                        <div class = "row col-sm-12">
                            <div class = "row col-sm-12 col-md-12">
                                <select class="form-control" id="sem_select" name="sem_select">
                                    <option selected disabled>Please Select the Semester</option>
                                    <% for(var i = 0; i < sems.length; i++) {%>
                                      <option value="<%=sems[i]['SEM']%>" id="semid" name="semid"><%=sems[i]['SEM']%> Semester</option>
                                    <%}%>>
                                </select>
                            </div>
                        </div>
                  </fieldset>
                <fieldset class="inline-fields branch">
                    <h3>Select the Branch</h3>
                      <div class = "row col-sm-12 mb-5">
                          <div class = "row col-sm-12 col-md-12">
                              <select class="form-control" id="branch_select" name="branch_select">
                                <option selected disabled>Please Select the Branch</option>
                                <% for(var i = 0; i < branches.length; i++) {%>
                                  <option value="<%=branches[i]['BRANCH']%>" id="branchid" name="branchid"><%=branches[i]['BRANCH']%></option>
                                <%}%>>
                              </select>
                          </div>
                      </div>
                </fieldset>
                  <fieldset class="inline-fields subj mb-5">
                    <h3>Select the Subject</h3>
                        <div class = "row col-sm-12">
                            <div class = "row col-sm-12 col-md-12">
                                <select class="form-control" id="subject_select" name="subject_select">
                                  <option selected disabled>Please Select the Subject</option>
                                  <% for(var i = 0; i < subjects.length; i++) {%>
                                  <option value="<%=subjects[i]['Subject']%>" id="subjectid" name="subjectid"><%=subjects[i]['Subject']%></option>
                                  <%}%>>
                                </select>
                            </div>
                        </div>
                  </fieldset>
                <button class="btn btn-primary btn-lg js-scroll-trigger" id="searchbtn">Search</button>
              </form>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Footer -->
    <footer class="footer text-center" id="contact">
      <img src="./img/cet.png"></img> 
     <br><br><br><br><br>
      <div class="container">
        <ul class="list-inline mb-5">
          <li class="list-inline-item">
            <a class="social-link rounded-circle text-white mr-3" href="https://www.facebook.com/CETBhubaneswar-121094121241690/">
              <i class="icon-social-facebook"></i>
            </a>
          </li>
          <li class="list-inline-item">
            <a class="social-link rounded-circle text-white mr-3" href="https://twitter.com/CETB">
              <i class="icon-social-twitter"></i>
            </a>
          </li>
        </ul>
        <p class="text-muted small mb-0">Copyright &copy; Mark Updater 2018</p>
      </div>
    </footer>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded js-scroll-trigger" href="#page-top">
      <i class="fa fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="js/stylish-portfolio.min.js"></script>
    <script src="js/main.js"></script>
    <script type="text/javascript" charset="utf8" src="/DataTables/datatables.js"></script>


  </body>

</html>
